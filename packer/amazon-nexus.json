{
  "variables": {
    "ansible_dir": "../ansible",
    "timestamp": "{{isotime \"2006-01-02T15.04.05Z\"}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-cd0f5cb6",
      "instance_type": "t2.medium",
      "ssh_username": "ubuntu",
      "ami_name": "nexus-image-{{user `timestamp`}}",
      "user_data_file": "user-data.yml"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["test -e /usr/bin/python || (sudo apt -y update && sudo apt install -y python-minimal)"]
    },
    {
      "type": "ansible",
      "user": "ubuntu",
      "playbook_file": "{{user `ansible_dir`}}/site.yml",
      "inventory_directory": "{{user `ansible_dir`}}/inventories/prod",
      "groups": [ "nexus" ],
      "ansible_env_vars": [
        "ANSIBLE_CONFIG={{user `ansible_dir`}}/ansible.cfg",
        "ANSIBLE_VAULT_PASSWORD_FILE={{user `ansible_dir`}}/files/vault-password"
      ],
      "extra_arguments": [
        "--verbose"
      ]
    }
  ]
}
