---
services: docker

env:
  global:
    # This is the 'VAULT_PASSWORD' environment variable, encrypted for security.
    # See https://docs.travis-ci.com/user/environment-variables/#Encrypting-environment-variables
    - secure: 

    # This is the script that ansible-vault will execute to get the vault password. It simply
    # prints the value of the 'VAULT_PASSWORD' environment variable, which we've defined above.
    - ANSIBLE_VAULT_PASSWORD_FILE=$TRAVIS_BUILD_DIR/provisioning/files/vault-password

jobs:
  include:
    - stage: test
      script: $TRAVIS_BUILD_DIR/travis/test_script.sh

#    - stage: provision
#      install: $TRAVIS_BUILD_DIR/travis/provision_install.sh
#      script: $TRAVIS_BUILD_DIR/travis/provision_script.sh
